<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Painel Administrativo</title>
    <link rel="stylesheet" href="/css/styleAdm.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>
<body>
    <section class="navbar navbar-inverse">
        <section class="navbar-header">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/adm">Dashboard</a></li>
                <li><a href="/adm/usuarios">Usuários</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/">Voltar ao Site</a></li>
            </ul>
        </section>
    </section>

    <section class="container">
        <section class="welcome-banner">
            <h1>Bem-vindo a Área Administrativa</h1>
            <p>Gerencie todos os usuários e dados da plataforma de forma centralizada</p>
            
            <section class="quick-stats loading-stats" id="stats-container">
                <section class="stat-box">
                    <section class="stat-number" id="total-usuarios">0</section>
                    <section class="stat-label">Total de Usuários</section>
                </section>
                <section class="stat-box">
                    <section class="stat-number" id="total-clientes">0</section>
                    <section class="stat-label">Clientes</section>
                </section>
                <section class="stat-box">
                    <section class="stat-number" id="total-nutricionistas">0</section>
                    <section class="stat-label">Nutricionistas</section>
                </section>
            </section>
        </section>

        <section class="section-header">
            <h2>Gerenciamento Principal</h2>
        </section>

        <section class="row">
            <section class="col-md-4">
                <section class="panel panel-primary">
                    <section class="panel-body">
                        <section class="icon-box">
                            <span class="material-symbols-outlined">group</span>
                        </section>
                        <section class="panel-title">Todos os Usuários</section>
                        <section class="panel-description">
                            Visualize, edite e gerencie todos os usuários cadastrados no sistema
                        </section>
                        <a href="/adm/usuarios" class="btn btn-primary btn-panel">
                            Acessar Usuários
                        </a>
                    </section>
                </section>
            </section>

            <section class="col-md-4">
                <section class="panel panel-info">
                    <section class="panel-body">
                        <section class="icon-box">
                            <span class="material-symbols-outlined">person</span>
                        </section>
                        <section class="panel-title">Clientes</section>
                        <section class="panel-description">
                            Gerencie contas de clientes e seus dados relacionados
                        </section>
                        <a href="/adm/usuarios" class="btn btn-info btn-panel">
                            Gerenciar Clientes
                        </a>
                    </section>
                </section>
            </section>

            <section class="col-md-4">
                <section class="panel panel-success">
                    <section class="panel-body">
                        <section class="icon-box">
                            <span class="material-symbols-outlined">medical_services</span>
                        </section>
                        <section class="panel-title">Nutricionistas</section>
                        <section class="panel-description">
                            Administre perfis e informações profissionais dos nutricionistas
                        </section>
                        <a href="/adm/usuarios" class="btn btn-success btn-panel">
                            Gerenciar Nutricionistas
                        </a>
                    </section>
                </section>
            </section>
        </section>

        <footer>
            <p>&copy; 2025 Sistema NutriWeb | Painel Administrativo</p>
        </footer>
    </section>
    
    <script>
        function carregarEstatisticas() {
            fetch('/adm/api/estatisticas')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Erro na resposta do servidor');
                    }
                    return response.json();
                })
                .then(data => {
                    const statsContainer = document.getElementById('stats-container');
                    statsContainer.classList.remove('loading-stats');
                    
                    document.getElementById('total-usuarios').textContent = data.totalUsuarios || 0;
                    document.getElementById('total-clientes').textContent = data.totalClientes || 0;
                    document.getElementById('total-nutricionistas').textContent = data.totalNutricionistas || 0;
                    
                    console.log('Estatísticas carregadas:', data);
                })
                .catch(error => {
                    console.error('Erro ao carregar estatísticas:', error);
                    const statsContainer = document.getElementById('stats-container');
                    statsContainer.classList.remove('loading-stats');
                    
                    document.getElementById('total-usuarios').textContent = '0';
                    document.getElementById('total-clientes').textContent = '0';
                    document.getElementById('total-nutricionistas').textContent = '0';
                });
        }
        
        document.addEventListener('DOMContentLoaded', carregarEstatisticas);
    </script>
</body>
</html>