<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="imagens/logo-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="css/styleCadastrarNutri.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Cadastro nutricionista - NutriWeb</title>
</head>
    <body>
        <% 
        let erroValidacao = {"nome" : "", "telefone":"", "email" : "", "senha" : "", "area":"", "crn":""};
        let msgErro = {"nome" : "", "telefone":"", "email" : "", "senha" : "", "area":"", "crn":""};
        if(listaErros) {
            listaErros.errors.forEach( function(erro) {
                if (erro.path == "nome") {
                    erroValidacao.nome = "erro-form",
                    msgErro.nome = erro.msg
                }
                if (erro.path == "telefone") {
                    erroValidacao.telefone = "erro-form",
                    msgErro.telefone = erro.msg
                }
                if (erro.path == "email") {
                    erroValidacao.email = "erro-form",
                    msgErro.email = erro.msg
                }
                if (erro.path == "senha") {
                    erroValidacao.senha = "erro-form",
                    msgErro.senha = erro.msg
                }
                if (erro.path == "area") {
                    erroValidacao.area = "erro-form",
                    msgErro.area = erro.msg
                }
                if (erro.path == "nome") {
                    erroValidacao.crn = "erro-form",
                    msgErro.crn = erro.msg
                }
            });
        } 
        %>
        <section class="header-content">
            <a href="/cadastro" class="back-button">
                <span class="material-icons arrow-icon md-24">arrow_back_ios</span>
                <span class="back-arrow">Voltar</span>
            </a>
        </section>

        <section class="container">
            <section class="card">
                <section class="conteudo-form">
                    <span class="notification"><%= msgErro.nome %></span>
                    <span class="notification2"><%= msgErro.telefone %></span>
                    <span class="notification3"><%= msgErro.email %></span>
                    <span class="notification4"><%= msgErro.senha %></span>
                    <span class="notification5"><%= msgErro.area %></span>
                    <span class="notification6"><%= msgErro.crn %></span>
                    <form action="/cadastrarnutri" method="post" class="cadastro-form">
                        <h2>Cadastre-se e comece sua jornada</h2>
                        <section class="campo-form">
                            <label for="nome">Nome completo:</label>
                            <input type="text" id="nome" name="nome" value="<%= valores.nome %>" class="<%= erroValidacao.nome %>" placeholder="Digite seu nome completo">
                        </section>
                        <section class="campo-form">
                            <label for="telefone">Telefone:</label>
                            <input type="text" id="telefone" name="telefone" value="<%= valores.telefone %>" class="<%= erroValidacao.telefone %>" placeholder="Digite o número de seu telefone">
                        </section>
                        <section class="campo-form">
                            <label for="email">E-mail:</label>
                            <input type="text" id="email" name="email" value="<%= valores.email %>" class="<%= erroValidacao.email %>" placeholder="Digite seu e-mail">
                        </section>
                        <section class="campo-form">
                            <label for="senha">Crie uma senha:</label>
                            <input type="text" id="senha" name="senha" value="<%= valores.senha %>" class="<%= erroValidacao.senha %>"placeholder="Crie uma senha">
                        </section>
                        <section class="campo-form">
                            <label for="area">Digite em qual área da nutrição você se sente mais familiarizado:</label>
                            <input type="text" id="area" name="area" value="<%= valores.area %>" class="<%= erroValidacao.area %>" placeholder="Ex: alimentação sem glúten">
                        </section>
                        <section class="campo-form">
                            <label for="crn">Número do CRN:</label>
                            <input type="text" id="crn" name="crn" value="<%= valores.crn %>" class="<%= erroValidacao.crn %>" placeholder="Digite seu número do CRN">
                        </section>
                        <button type="submit" class="btn-cadastrar">Cadastrar</button>
                    </form>
                </section>
            </section>

            <section class="imagem-container">
                <a href="/"><img src="imagens/logo.png" alt="Imagem" class="imagem-fullwidth"></a>
            </section>
        </section>

        <footer class="footer">
            <section class="footer-container">

                <section class="footer-logo">
                    <a href="/"><img src="imagens/logo.png" class="img-footer" alt="Logo" class="logo"></a>
                </section>

              <section class="footer-informacao">
                <h3>Sobre o NutriWeb</h3>
                <p>Conecte-se com os melhores nutricionistas e encontre o profissional ideal para você.</p>
              </section>
          
              <section class="footer-social">
                <h3>Siga-nos</h3>
                <section class="social-icons">
                  <a href="https://www.instagram.com/nutriweb_oficial/"><i class="fab fa-instagram"></i></a>
                </section>
              </section>
            </section>
            
            <section class="footer-bottom">
              <p>&copy; 2024 NutriWeb. Todos os direitos reservados.</p>
            </section>
        </footer>

        <section class="mobile">

            <section class="menu">
                <section class="left-section">
                    <a href="/"><img src="imagens/logo.png" alt="Logo" class="logo"></a>
                </section>

                <section class="right-section">
                    <span class="material-icons search-icon md-24 menu-icon">menu</span>
                </section>
            </section>

            <section class="mobile-menu hidden">
                <ul>
                    <li><a href="/login">Entrar</a></li>
                    <li><a href="/ranking">Ranking</a></li>
                    <li><a href="/profissionais">Profissionais</a></li>
                    <li><a href="/premium">Premium</a></li>
                </ul>
            </section>

        </section>


    </body>
    <script src="js/indexMenu.js"></script>
</html>
